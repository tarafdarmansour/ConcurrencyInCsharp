@model ParallelProcessingDemo.Models.ParallelDemoViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>@Model.Title</h1>
                    <p class="lead">@Model.Description</p>
                </div>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> بازگشت به خانه
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="card-title">روش پردازش</h5>
                    <p class="card-text">@Model.ParallelMethod</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">زمان اجرای ترتیبی</h5>
                    <p class="card-text fs-4">@Model.SequentialExecutionTime ms</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">زمان اجرای موازی</h5>
                    <p class="card-text fs-4">@Model.ExecutionTime ms</p>
                </div>
            </div>
        </div>
    </div>

    @{
        var speedup = Model.SequentialExecutionTime > 0 
            ? (double)Model.SequentialExecutionTime / Model.ExecutionTime 
            : 0;
        var improvement = Model.SequentialExecutionTime > 0 
            ? ((double)(Model.SequentialExecutionTime - Model.ExecutionTime) / Model.SequentialExecutionTime * 100) 
            : 0;
    }

    @if (Model.SequentialExecutionTime > 0 && Model.ExecutionTime > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line"></i> مقایسه عملکرد
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <h6 class="text-muted">سرعت بهبود</h6>
                                <h3 class="text-success">@speedup.ToString("F2")x</h3>
                                <small class="text-muted">@(speedup > 1 ? "موازی سریع‌تر است" : "ترتیبی سریع‌تر است")</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h6 class="text-muted">صرفه‌جویی زمان</h6>
                                <h3 class="text-primary">@((Model.SequentialExecutionTime - Model.ExecutionTime)) ms</h3>
                                <small class="text-muted">@improvement.ToString("F1")% بهبود</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h6 class="text-muted">کاهش زمان</h6>
                                <h3 class="text-info">@improvement.ToString("F1")%</h3>
                                <small class="text-muted">نسبت به اجرای ترتیبی</small>
                            </div>
                        </div>
                        <hr />
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: @(speedup > 1 ? (1 / speedup * 100) : 100)%" 
                                 aria-valuenow="@(speedup > 1 ? (1 / speedup * 100) : 100)" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <strong>ترتیبی: @Model.SequentialExecutionTime ms</strong>
                            </div>
                            <div class="progress-bar bg-info" role="progressbar" 
                                 style="width: @(speedup > 1 ? ((speedup - 1) / speedup * 100) : 0)%" 
                                 aria-valuenow="@(speedup > 1 ? ((speedup - 1) / speedup * 100) : 0)" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <strong>موازی: @Model.ExecutionTime ms</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">۱۰ مشتری با بیشترین خرید</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>نام مشتری</th>
                                    <th>منطقه</th>
                                    <th>مجموع خرید</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PlinqResults != null)
                                {
                                    foreach (var customer in Model.PlinqResults)
                                    {
                                        <tr>
                                            <td>@customer.Name</td>
                                            <td>@customer.Region</td>
                                            <td>@customer.TotalPurchases.ToString("C0")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">آمار بر اساس منطقه</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>منطقه</th>
                                    <th>میانگین خرید</th>
                                    <th>تعداد مشتریان</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RegionStats != null)
                                {
                                    foreach (var region in Model.RegionStats)
                                    {
                                        <tr>
                                            <td>@region.Region</td>
                                            <td>@region.AveragePurchase.ToString("C0")</td>
                                            <td>@region.CustomerCount</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CPU-Bound Example -->
    @if (Model.CpuBoundData != null)
    {
        var cpuData = Model.CpuBoundData;
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-microchip"></i> مثال CPU-Bound: محاسبات ریاضی پیچیده
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="lead">@cpuData.Description</p>
                        
                        <!-- CPU-Bound Statistics -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-warning text-white text-center">
                                    <div class="card-body">
                                        <h6>زمان ترتیبی</h6>
                                        <h4>@cpuData.SequentialTime ms</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white text-center">
                                    <div class="card-body">
                                        <h6>زمان موازی</h6>
                                        <h4>@cpuData.ParallelTime ms</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white text-center">
                                    <div class="card-body">
                                        <h6>سرعت بهبود</h6>
                                        <h4>@cpuData.Speedup.ToString("F2")x</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-primary text-white text-center">
                                    <div class="card-body">
                                        <h6>بهبود عملکرد</h6>
                                        <h4>@cpuData.ImprovementPercentage.ToString("F1")%</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Progress Bar Comparison -->
                        <div class="mb-4">
                            <h6 class="mb-3">مقایسه عملکرد</h6>
                            <div class="progress" style="height: 40px;">
                                <div class="progress-bar bg-warning" role="progressbar" 
                                     style="width: @(cpuData.Speedup > 1 ? (1 / cpuData.Speedup * 100) : 100)%" 
                                     aria-valuenow="@(cpuData.Speedup > 1 ? (1 / cpuData.Speedup * 100) : 100)" 
                                     aria-valuemin="0" aria-valuemax="100">
                                    <strong>ترتیبی: @cpuData.SequentialTime ms</strong>
                                </div>
                                <div class="progress-bar bg-success" role="progressbar" 
                                     style="width: @(cpuData.Speedup > 1 ? ((cpuData.Speedup - 1) / cpuData.Speedup * 100) : 0)%" 
                                     aria-valuenow="@(cpuData.Speedup > 1 ? ((cpuData.Speedup - 1) / cpuData.Speedup * 100) : 0)" 
                                     aria-valuemin="0" aria-valuemax="100">
                                    <strong>موازی: @cpuData.ParallelTime ms</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Results Info -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>تعداد اعداد پردازش شده</h6>
                                        <h4>@cpuData.NumbersProcessed.ToString("N0")</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>صرفه‌جویی زمان</h6>
                                        <h4 class="text-success">@((cpuData.SequentialTime - cpuData.ParallelTime)) ms</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sample Results -->
                        @if (cpuData.FactorialResults != null && cpuData.FactorialResults.Any())
                        {
                            <div class="mb-4">
                                <h6>نمونه نتایج (20 مورد اول):</h6>
                                <div class="table-responsive">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                            <tr>
                                                <th>عدد</th>
                                                <th>فاکتوریل</th>
                                                <th>مجموع ارقام</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var result in cpuData.FactorialResults)
                                            {
                                                <tr>
                                                    <td>@result.Number</td>
                                                    <td>@result.Factorial.ToString("N0")</td>
                                                    <td>@result.SumOfDigits</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                        <!-- Code Example -->
                        <div class="card bg-light">
                            <div class="card-header">
                                <h6 class="mb-0">کد استفاده شده</h6>
                            </div>
                            <div class="card-body">
                                <pre><code class="language-csharp">// CPU-Bound Processing with PLINQ
var numbers = Enumerable.Range(1, 10000).ToList();

// Sequential
var sequentialResults = numbers
    .Select(n => new FactorialResult
    {
        Number = n,
        Factorial = CalculateFactorial(n % 20),
        SumOfDigits = CalculateSumOfDigits(n)
    })
    .ToList();

// Parallel (PLINQ) - Much faster for CPU-bound operations
var parallelResults = numbers
    .AsParallel()
    .Select(n => new FactorialResult
    {
        Number = n,
        Factorial = CalculateFactorial(n % 20),
        SumOfDigits = CalculateSumOfDigits(n)
    })
    .ToList();</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">کد استفاده شده (مثال‌های قبلی)</h5>
                </div>
                <div class="card-body">
                    <pre><code class="language-csharp">// PLINQ Example
var highValueCustomers = customers
    .AsParallel()
    .Where(c => c.TotalPurchases > 5000)
    .OrderByDescending(c => c.TotalPurchases)
    .Take(10)
    .ToList();

var averageByRegion = customers
    .AsParallel()
    .GroupBy(c => c.Region)
    .Select(g => new
    {
        Region = g.Key,
        AveragePurchase = g.Average(c => c.TotalPurchases),
        CustomerCount = g.Count()
    })
    .OrderByDescending(r => r.AveragePurchase)
    .ToList();</code></pre>
                </div>
            </div>
        </div>
    </div>
</div>
